<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_button"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@id/num_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_text_view" />

    <Button
        android:id="@+id/num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/num_3"
        app:layout_constraintStart_toEndOf="@id/num_1"
        app:layout_constraintTop_toBottomOf="@id/result_text_view" />

    <Button
        android:id="@+id/num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@id/symbol_divide"
        app:layout_constraintStart_toEndOf="@id/num_2"
        app:layout_constraintTop_toBottomOf="@id/result_text_view" />

    <Button
        android:id="@+id/symbol_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_button"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/num_3"
        app:layout_constraintTop_toBottomOf="@id/result_text_view" />

    <Button
        android:id="@+id/num_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_button"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@id/num_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_1" />

    <Button
        android:id="@+id/num_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@id/num_6"
        app:layout_constraintStart_toEndOf="@id/num_4"
        app:layout_constraintTop_toBottomOf="@id/num_2" />

    <Button
        android:id="@+id/num_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@id/symbol_multiply"
        app:layout_constraintStart_toEndOf="@id/num_5"
        app:layout_constraintTop_toBottomOf="@id/num_3" />

    <Button
        android:id="@+id/symbol_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_button"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/num_6"
        app:layout_constraintTop_toBottomOf="@id/symbol_divide" />


    <Button
        android:id="@+id/num_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_button"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@id/num_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_4" />

    <Button
        android:id="@+id/num_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@id/num_9"
        app:layout_constraintStart_toEndOf="@id/num_7"
        app:layout_constraintTop_toBottomOf="@id/num_5" />

    <Button
        android:id="@+id/num_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@id/symbol_minus"
        app:layout_constraintStart_toEndOf="@id/num_8"
        app:layout_constraintTop_toBottomOf="@id/num_6" />

    <Button
        android:id="@+id/symbol_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_button"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/num_9"
        app:layout_constraintTop_toBottomOf="@id/symbol_multiply" />

    <Button
        android:id="@+id/symbol_."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_button"
        android:text="."
        app:layout_constraintEnd_toStartOf="@id/num_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_7" />

    <Button
        android:id="@+id/num_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@id/symbol_equals"
        app:layout_constraintStart_toEndOf="@id/symbol_."
        app:layout_constraintTop_toBottomOf="@id/num_8" />

    <Button
        android:id="@+id/symbol_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintEnd_toStartOf="@id/symbol_plus"
        app:layout_constraintStart_toEndOf="@id/num_0"
        app:layout_constraintTop_toBottomOf="@id/num_9" />

    <Button
        android:id="@+id/symbol_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_button"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/symbol_equals"
        app:layout_constraintTop_toBottomOf="@id/symbol_minus" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_textview"
        android:layout_marginEnd="@dimen/margin_end_textview"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_textview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>